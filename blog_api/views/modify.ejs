    <%- include("partials/header.ejs") %>

  <div class="container my-5 modify">
  <h1 class="text-center mb-4 text-success"><%= heading %></h1>

  <% if (locals.post) { %>
    <form id="editForm" method="post" action="/api/posts/<%= post.id %>" class="form-style mx-auto">
      <div class="mb-3">
        <input type="text" name="title" value="<%= post.title %>" class="form-control" required />
      </div>
      <div class="mb-3">
        <textarea name="content" rows="10" class="form-control" required><%= post.content %></textarea>
      </div>
      <div class="mb-3">
        <input type="text" name="author" value="<%= post.author %>" class="form-control" required />
      </div>
      <button type="submit" class="btn btn-success w-100"><%= submit %></button>
    </form>
  <% } else { %>
    <form id="newPostForm" method="post" action="/api/posts" class="form-style mx-auto">
      <div class="mb-3">
        <input type="text" name="title" placeholder="Title" class="form-control" required />
      </div>
      <div class="mb-3">
        <textarea name="content" placeholder="Content" rows="10" class="form-control" required></textarea>
      </div>
      <div class="mb-3">
        <input type="text" name="author" placeholder="Author" class="form-control" required />
      </div>
      <button type="submit" class="btn btn-success w-100"><%= submit %></button>
    </form>
  <% } %>
</div>

     <%- include("partials/footer.ejs") %>
