<%- include("partials/header.ejs") %>

<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary">All Posts</h2>
    <a href="/create" class="btn btn-success">+ Create New Post</a>
  </div>

  <% if (posts.length > 0) { %>
    <div class="row g-4">
      <% posts.forEach((post, index) => { %>
        <div class="col-sm-12 col-md-6 col-lg-4 ">
          <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-primary"><%= post.title %></h5>
              <p class="card-text flex-grow-1"><%= post.comment %>
              </p>
              <div class="d-flex justify-content-between mt-3">
                <form action="/edit/<%= index %>" method="GET">
                  <button type="submit" class="btn btn-warning btn-sm">Edit</button>
                </form>
                <form action="/delete" method="POST">
                  <input type="hidden" name="index" value="<%= index %>" />
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="alert alert-info text-center">No blog posts yet.</div>
  <% } %>
</div>

<%- include("partials/footer.ejs") %>
